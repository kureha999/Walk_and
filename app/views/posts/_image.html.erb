<% if post.s3_image_url.present? %>
<%= image_tag post.s3_image_url, id: "post_image_#{post.id}", class: "rounded-lg shadow-lg w-full", style: "border: 6px solid #b1cdbb;" %>
<% else %>
<%= image_tag post.image.url, id: "post_image_#{post.id}", class: "rounded-lg shadow-lg w-full", style: "border: 6px solid #b1cdbb;" %>
<% end %>