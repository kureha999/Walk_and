<% content_for :title, t('comments.edit.header') %>
<style>
  textarea:focus {
    border-color: #7e928d !important;
    outline: none;
  }
</style>
<h1 style="
  font-size: 1.5rem;
  font-weight: bold;
  color: #c19a88;
  text-align: center;
  margin-bottom: 1.5rem;">
  <%= t('comments.edit.title') %>
</h1>

<div style="
  max-width: 600px;
  margin: 2rem auto;
  padding: 2rem;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 0 4px 6px #b1cdbb;">

  <%= form_with(model: [@post, @comment], local: true) do |form| %>
  <div style="margin-bottom: 1.5rem;">
    <%= form.label :body, t('comments.edit.body'),
          style: 'display: block; margin-bottom: 0.5rem; font-size: 1rem; font-weight: bold; color: #b1cdbb' %>
    <%= form.text_area :body,
          style: 'width: 100%; height: 120px; padding: 0.5rem; border: 2px solid #e5e7eb; border-radius: 4px; ' %>
  </div>

  <div style="display: flex; justify-content: center; gap: 1rem; margin-top: 2rem;">
    <!-- キャンセルボタン -->
    <%= link_to t('comments.edit.cancel'), post_path(@post),style: "padding-left: 1rem; padding-right: 1rem; padding-top: 0.5rem; padding-bottom: 0.5rem; background-color: #7e928d; color: white; font-weight: 600; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1); color: #e4ddd5;" %>

    <!-- 更新ボタン -->
    <%= form.submit t('comments.edit.submit'),
            class: "px-4 py-2 bg-logo-brown text-text-cream font-semibold rounded shadow",
            style: "padding: 0.5rem 2rem; border: none;" %>
  </div>
  <% end %>
</div>