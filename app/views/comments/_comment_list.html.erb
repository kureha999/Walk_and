<div class="mt-8 bg-background-blue p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-logo-brown mb-4">
    <%= t('comments.list.title') %>
  </h2>
  <% if @post.comments.any? %>
  <div class="space-y-4">
    <% @post.comments.each do |comment| %>
    <div class="bg-white p-4 rounded-lg shadow flex justify-between items-start">
      <div>
        <p class="font-bold text-logo-brown"><%= comment.user.name %></p>
        <p class="text-footer-color mt-2 whitespace-pre-line"><%= comment.body %></p>
      </div>
      <% if comment.user == current_user %>
      <div class="text-text-cream px-4 py-2 mt-2 flex justify-end">
        <%= link_to t('comments.list.edit'), edit_post_comment_path(@post, comment), class: "rounded-lg bg-logo-brown px-4 py-2 hover:underline", style: "margin-right: 8px;" %>
        <%= link_to t('comments.list.delete'), post_comment_path(@post, comment), method: :delete, class: "rounded-lg bg-logo-brown  px-4 py-2 hover:underline" %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <% else %>
  <p class="text-footer-color"><%= t('comments.list.else') %></p>
  <% end %>
</div>