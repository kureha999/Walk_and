<header class="bg-background-blue text-logo-brown py-4">
  <div class="container mx-auto px-4 max-w-[600px]" style="display: flex; flex-direction: column; align-items: center;">
    <!-- 上部：ロゴ -->
    <div style="margin-bottom: 16px;">
      <span class="text-5xl font-bold italic font-dancing-script transform rotate-[-6deg]" style="text-align: center; display: block;">
        <%= t('shared.header.logo') %>
      </span>
    </div>
    <!-- 下部：リンクボタン -->
    <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 16px;">
      <%= link_to t('shared.header.logout'), destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'bg-logo-brown text-text-cream px-4 py-2 rounded-full hover:opacity-90 text-sm', style: 'width: 120px; text-align: center; word-break: break-word;' %>
      <%= link_to t('shared.header.mypage'), mypage_path, class: 'bg-logo-brown text-text-cream px-4 py-2 rounded-full hover:opacity-90 text-sm', style: 'width: 120px; text-align: center; word-break: break-word;' %>
      <%= link_to t('shared.header.new_post'), new_post_path, class: 'bg-logo-brown text-text-cream px-4 py-2 rounded-full hover:opacity-90 text-sm', style: 'width: 120px; text-align: center; word-break: break-word;' %>
      <%= link_to t('shared.header.posts_list'), posts_path, class: 'bg-logo-brown text-text-cream px-4 py-2 rounded-full hover:opacity-90 text-sm', style: 'width: 120px; text-align: center; word-break: break-word;' %>
    </div>
  </div>
</header>