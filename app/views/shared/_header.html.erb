<header class="bg-background-blue text-logo-brown py-4">
  <div class="container mx-auto flex items-center justify-between px-4 max-w-[600px]">
    <!-- 左側：ロゴ -->
    <div class="flex items-center space-x-4">
      <span class="text-5xl font-bold italic font-dancing-script transform rotate-[-6deg]">
        <%= t('shared.header.logo') %>
      </span>
    </div>
    <!-- 右側：リンクボタン -->
    <div class="flex space-x-4">
      <%= link_to t('shared.header.login'), new_user_session_path, class: 'bg-logo-brown text-text-cream px-4 py-2 rounded-full hover:opacity-90 text-sm' %>
      <%= link_to t('shared.header.posts_list'), posts_path, class: 'bg-logo-brown text-text-cream px-4 py-2 rounded-full hover:opacity-90 text-sm' %>
    </div>
  </div>
</header>