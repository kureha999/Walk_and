<footer style="background-color: #7e928d; color: #e4ddd5; padding: 1rem 0; margin-top: 1rem;">
  <div style="
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 0 1rem;">
    <!-- コピーライト -->
    <div style="font-size: 0.875rem; margin-bottom: 0.5rem; font-family: 'Dancing Script', cursive;">
      <%= t('shared.footer.copyright') %>
    </div>
    <!-- リンクボタン -->
    <div style="font-size: 0.875rem;">
      <%= link_to t('shared.footer.contact'), '#', style: 'text-decoration: none; color: #e4ddd5; margin-right: 1rem;' %>
      <%= link_to t('shared.footer.terms'), terms_path, style: 'text-decoration: none; color: #e4ddd5; margin-right: 1rem;' %>
      <%= link_to t('shared.footer.privacy_policy'), privacy_path, style: 'text-decoration: none; color: #e4ddd5;' %>
    </div>
  </div>
</footer>