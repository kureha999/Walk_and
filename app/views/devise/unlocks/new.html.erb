<% content_for :title, t('devise.unlocks.new.header') %>
<h2>
  <%= t('devise.unlocks.new.resend_instructions') %>
</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: ('devise.unlocks.new.email') %>
</div>

<div class="actions">
  <%= f.submit ('devise.unlocks.new.resend_instructions') %>
</div>
<% end %>

<%= render "devise/shared/links" %>