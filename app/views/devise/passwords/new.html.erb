<div class="bg-text-cream">
  <div class="max-w-md mx-auto p-8 bg-logo-brown rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-white mb-8 text-center">パスワードをお忘れですか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div class="space-y-2">
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-text-cream" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "パスワードリセットの手順を送信", class: "w-full bg-background-blue text-white py-2 px-4 rounded-md hover:bg-green-500 transition-colors duration-200" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>