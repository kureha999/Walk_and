<% content_for :title, t('devise.registrations.body') %>
<div class="bg-text-cream">
  <div class="max-w-md mx-auto p-8 bg-logo-brown rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-white mb-8 text-center">
      <%= t('devise.registrations.top') %>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :name, t('devise.registrations.name'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.text_field :name, autofocus: true, autocomplete: t('devise.registrations.name'), class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :email, t('devise.registrations.email'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.email_field :email, autocomplete: t('devise.registrations.email'), class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, t('devise.registrations.password'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password, autocomplete: t('devise.registrations.password'), class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, t('devise.registrations.password_confirmation'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password_confirmation, autocomplete: t('devise.registrations.password_confirmation'), class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.registrations.submit'), class: "w-full bg-background-blue text-white py-2 px-4 rounded-md hover:bg-green-500 transition-colors duration-200" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>