<% content_for :title, "新規登録ページ" %>
<div class="bg-text-cream">
  <div class="max-w-md mx-auto p-8 bg-logo-brown rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-white mb-8 text-center">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :name, "名前", class: "block text-sm font-medium text-text-cream" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-text-cream" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "w-full bg-background-blue text-white py-2 px-4 rounded-md hover:bg-green-500 transition-colors duration-200" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>