<div class="bg-text-cream">
  <div class="max-w-md mx-auto p-8 bg-logo-brown rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-white mb-8 text-center">編集 <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-text-cream" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-xs text-text-cream">
      現在確認待ち: <%= resource.unconfirmed_email %>
    </div>
    <% end %>

    <div class="space-y-2">
      <%= f.label :password, "パスワード (変更しない場合は空欄のまま)", class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
      <% if @minimum_password_length %>
      <em class="text-xs text-text-cream">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :current_password, "現在のパスワード (変更を確定するために必要です)", class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "w-full bg-background-blue text-white py-2 px-4 rounded-md hover:bg-green-500 transition-colors duration-200" %>
    </div>
    <% end %>

    <h3 class="text-lg font-semibold text-white mt-6">Cancel my account</h3>
    <div class="text-text-cream">
      アカウントを削除しますか？
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "text-red-500 hover:underline" %>
    </div>

    <div class="mt-4">
      <%= link_to "Back", :back, class: "text-background-blue hover:underline" %>
    </div>
  </div>
</div>