<% content_for :title, t('devise.registrations.header') %>
<div class="bg-text-cream">
  <div class="max-w-md mx-auto p-8 bg-logo-brown rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-white mb-8 text-center">
      <%= t('devise.registrations.title') %><%= resource_name.to_s.humanize %>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, t('devise.registrations.email'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-xs text-text-cream">
      <%= t('devise.registrations.stay') %><%= resource.unconfirmed_email %>
    </div>
    <% end %>

    <div class="space-y-2">
      <%= f.label :password, t('devise.registrations.password'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
      <% if @minimum_password_length %>
      <em class="text-xs text-text-cream">(<%= @minimum_password_length %><%= t('devise.registrations.characters_minimum') %></em>
      <% end %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, t('devise.registrations.password_confirmation'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="space-y-2">
      <%= f.label :current_password, t('devise.registrations.current_password'), class: "block text-sm font-medium text-text-cream" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-rose-200 rounded-md focus:outline-none focus:ring-2 focus:ring-background-blue focus:border-background-blue bg-text-cream" %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.registrations.update'), class: "w-full bg-background-blue text-white py-2 px-4 rounded-md hover:bg-green-500 transition-colors duration-200" %>
    </div>
    <% end %>

    <h3 class="text-lg font-semibold text-white mt-6">
      <%= t('devise.registrations.Cancel_my_account') %></h3>
    <div class="text-text-cream">
      <%= t('devise.registrations.destroy_confirm') %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: t('devise.registrations.destroy_confirm'), turbo_confirm: t('devise.registrations.destroy_confirm') }, method: :delete, class: "text-red-500 hover:underline" %>
    </div>

    <div class="mt-4">
      <%= link_to "Back", :back, class: "text-background-blue hover:underline" %>
    </div>
  </div>
</div>