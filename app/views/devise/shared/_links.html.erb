<div class="text-center space-y-4">
  <% if controller_name != 'sessions' %>
  <%= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name), class: "block text-text-cream pb-1 hover:underline mx-auto" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name), class: "block text-text-cream pb-1 hover:underline mx-auto" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.shared.links.forgot'), new_password_path(resource_name), class: "block text-text-cream pb-1 hover:underline mx-auto" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.shared.links.confirm'), new_confirmation_path(resource_name), class: "block text-text-cream pb-1 hover:underline mx-auto" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.shared.links.unlock'), new_unlock_path(resource_name), class: "block text-text-cream pb-1 hover:underline mx-auto" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
  <%= button_to t('devise.shared.links.line'), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-green-600 text-white py-6 px-12 text-xl font-semibold rounded-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-green-300" %>
  <% end %>
  <% end %>

</div>