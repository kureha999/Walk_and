<% content_for :title, t('events.new.header') %>

<div style="
  max-width: 600px;
  margin: 2rem auto;
  padding: 2rem;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 0 4px 6px #b1cdbb;">

  <%= form_with(model: @event, local: true) do |form| %>
  <div class="mb-4" style="margin-bottom: 1rem;">
    <%= form.label :title, t('events.new.title'), style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
    <%= form.text_field :title, class: "border rounded p-2 w-full", style: "width: 100%; padding: 0.5rem; border: 1px solid #e5e7eb; border-radius: 4px;" %>
  </div>

  <div class="mb-4" style="margin-bottom: 1rem;">
    <%= form.label :event_type, t('events.new.type'), style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
    <%= form.select :event_type, Event.event_types.keys.map { |key| [t("model.event.enum.#{key}"), key] }, {},
            style: "width: 100%; padding: 0.5rem; border: 1px solid #e5e7eb; border-radius: 4px;" %>
  </div>

  <div class="mb-4" style="margin-bottom: 1rem;">
    <%= form.label :time, t('events.new.time'), style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
    <%= form.datetime_local_field :time, value: @event.time,
            style: "width: 100%; padding: 0.5rem; border: 1px solid #e5e7eb; border-radius: 4px;" %>
  </div>

  <!-- ボタンをカードの一番下の中央に配置 -->
  <div style="display: flex; justify-content: center; gap: 1rem; margin-top: 2rem;">
    <!-- キャンセルボタン -->
    <%= link_to t('events.new.cancel'), event_date_path(@event.time.to_date.iso8601),style: "padding-left: 1rem; padding-right: 1rem; padding-top: 0.5rem; padding-bottom: 0.5rem; background-color: #7e928d; color: white; font-weight: 600; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1); color: #e4ddd5;"%>

    <!-- 更新ボタン -->
    <%= form.submit t('events.new.submit'),
            class: "px-4 py-2 bg-logo-brown text-text-cream font-semibold rounded shadow",
            style: "padding: 0.5rem 2rem; border: none;" %>
  </div>
  <% end %>
</div>