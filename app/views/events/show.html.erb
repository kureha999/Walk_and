<% content_for :title do %>
<%= @event.title %><%= t('events.show.header') %>
<% end %>

<div style="
  max-width: 600px;
  margin: 2rem auto;
  padding: 2rem;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 0 4px 6px #b1cdbb;">

  <h1 style="
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;">
    <%= t('events.show.title') %> <%= @event.title %>
  </h1>

  <p style="
    margin-bottom: 1rem;
    font-size: 1rem;
    line-height: 1.5;">
    <strong><%= t('events.show.type') %></strong> <%= @event.event_type %>
  </p>

  <p style="
    margin-bottom: 1.5rem;
    font-size: 1rem;
    line-height: 1.5;">
    <strong><%= t('events.show.time') %></strong> <%= @event.time.strftime("%Y-%m-%d %H:%M") %>
  </p>

  <div style="
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;">


    <%= link_to t('events.show.back'), events_path,
          style: 'padding: 0.5rem 1rem; background-color: #7e928d; color: white; font-weight: bold; border-radius: 0.375rem; text-align: center;' %>
  </div>
</div>