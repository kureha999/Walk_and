<div class="flex justify-between items-center">
  <h1 class="text-xl font-bold"><%= @date %></h1>
  <%= link_to "Add Event", new_event_path(date: @date), class: "bg-blue-500 text-white py-2 px-4 rounded" %>
</div>

<h2 class="mt-4 text-lg font-semibold">Events on <%= @date %></h2>
<% if @events.any? %>
<ul>
  <% @events.each do |event| %>
  <li class="mb-4">
    <strong><%= event.title %></strong><br>
    <%= event.event_type %> - <%= l(event.time, format: :short) %><br>
    <%= event.comment %>
    <div class="mt-2">
      <%= link_to "Edit", edit_event_path(event), class: "text-blue-500 hover:underline" %> |
      <%= link_to "Delete", event_path(event),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "text-red-500 hover:underline" %>
    </div>
  </li>
  <% end %>
</ul>
<% else %>
<p>No events for this day.</p>
<% end %>